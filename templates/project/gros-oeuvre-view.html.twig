									{% endif %}
								</div>
							</section>

						</div>
					</div>
					
						
									</div>
									<div class="panel-footer">
									{% if nbform == 11 %} 
									<b> Prix total : </b> {{etudeSol.prix + charpente.prix + prepTerrain.prix + soubassement.prix + elevation.prix 
									+ excavation.prix + vrd.prix + fondations.prix + plancher.prix + toiture.prix + menuiserie.prix}} €
									{% endif %}
										<ul class="pager">
										<a href="{{path('second-oeuvre', {'id': projet.id}) }}"> <button class="mb-xs mt-xs mr-xs btn btn-lg btn-default"
										type="button">Passer au second oeuvre</button></a>
										</ul>
									</div>
								</section>
							</div>
